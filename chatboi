import openai
import speech_recognition as sr
import pyttsx3

# Initialize OpenAI API
openai.api_key = "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"

# Initialize the text-to-speech engine
engine = pyttsx3.init()

def transcribe_audio_to_text(filename):
    recognizer = sr.Recognizer()
    with sr.AudioFile(filename) as source:
        audio = recognizer.record(source)
    try:
        return recognizer.recognize_google(audio, language="es")
    except:
        print("No se pudo reconocer el audio.")

def generate_response(prompt):
    response = openai.Completion.create(
        engine="text-davinci-003",
        prompt=prompt,
        max_tokens=4000,
        n=1,
        stop=None,
        temperature=0.5,
    )
    return response["choices"][0]["text"]

# Establecer una voz en español para el motor de texto a voz
voices = engine.getProperty('voices')
spanish_voice = None
for voice in voices:
    if "spanish" in voice.languages:
        spanish_voice = voice.id
if spanish_voice is not None:
    engine.setProperty('voice', spanish_voice)

def speak_text(text):
    engine.say(text)
    engine.runAndWait()

def main():
    while True:
        # Esperar a que el usuario diga "Jarvis"
        print("Di 'Jarvis' para comenzar a grabar.")
        with sr.Microphone() as source:
            recognizer = sr.Recognizer()
            audio = recognizer.listen(source)
            try:
                trigger_word = recognizer.recognize_google(audio, language="es")
                if trigger_word.lower() == "jarvis":
                    # Comenzar a grabar audio
                    print("Dime lo que deseas:")
                    filename = "input.wav"
                    recognizer.pause_threshold = 1
                    audio = recognizer.listen(source, phrase_time_limit=None, timeout=None)
                    with open(filename, "wb") as f:
                        f.write(audio.get_wav_data())

                    # Transcribir el audio a texto
                    text = transcribe_audio_to_text(filename)
                    if text:
                        print(f"Tú: {text}")

                        # Generar la respuesta usando GPT3
                        response = generate_response(text)
                        print(f"Jarvis: {response}")

                        # Leer la respuesta utilizando texto a voz
                        speak_text(response)
            except Exception as e:
                print(f"Error: {e}")

if _name_ == "_main_":
    main()
